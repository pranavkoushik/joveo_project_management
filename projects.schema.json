{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Joveo Projects",
  "description": "Schema for validating project entries in the Joveo New Initiatives Portal",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "title", "description", "status", "owners", "lastUpdated", "tags", "links"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^proj-[0-9]+$",
        "description": "Unique project identifier (e.g., proj-1, proj-2)"
      },
      "title": {
        "type": "string",
        "minLength": 5,
        "maxLength": 100,
        "description": "Project title (5-100 characters)"
      },
      "description": {
        "type": "string",
        "minLength": 20,
        "maxLength": 500,
        "description": "Project description (20-500 characters)"
      },
      "status": {
        "type": "string",
        "enum": ["Active", "Paused", "Completed", "Upcoming"],
        "description": "Current project status"
      },
      "owners": {
        "type": "array",
        "minItems": 1,
        "maxItems": 10,
        "items": {
          "type": "string",
          "minLength": 2,
          "maxLength": 50
        },
        "description": "List of project owners"
      },
      "lastUpdated": {
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
        "description": "Last update date in YYYY-MM-DD format"
      },
      "tags": {
        "type": "array",
        "minItems": 1,
        "maxItems": 10,
        "items": {
          "type": "string",
          "minLength": 2,
          "maxLength": 20
        },
        "description": "Project tags for categorization"
      },
      "links": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["label", "url"],
          "properties": {
            "label": {
              "type": "string",
              "minLength": 3,
              "maxLength": 100,
              "description": "Link label/description"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "pattern": "^https?://",
              "description": "Full URL to documentation (must be http or https)"
            }
          }
        },
        "description": "List of documentation links"
      }
    }
  }
}
